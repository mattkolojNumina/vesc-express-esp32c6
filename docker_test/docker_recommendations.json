{
  "tool_name": "docker",
  "recommendation_rules": [
    {
      "condition": "no_config_found",
      "recommendation": "./docker_ultimate setup",
      "priority": "high",
      "description": "Initial setup required"
    },
    {
      "condition": "service_not_running",
      "recommendation": "./docker_ultimate start",
      "priority": "medium",
      "description": "Start the service"
    },
    {
      "condition": "high_usage_detected",
      "recommendation": "./docker_ultimate optimize",
      "priority": "medium",
      "description": "Optimize based on usage patterns"
    },
    {
      "condition": "errors_detected",
      "recommendation": "./docker_ultimate troubleshoot",
      "priority": "high",
      "description": "Resolve detected issues"
    }
  ],
  "context_patterns": [
    "project_state",
    "service_status",
    "usage_history",
    "error_frequency",
    "performance_metrics"
  ]
}